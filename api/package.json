{
  "name": "nest-kickstart",
  "version": "0.1.0",
  "description": "A NestJS kickstart project.",
  "keywords": [
    "typescript",
    "express",
    "nest",
    "node",
    "api"
  ],
  "author": "Mihai Borbea",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:mihai.borbea/nest-kickstart.git"
  },
  "main": "./src/main.ts",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "./node_modules/.bin/tsc -p tsconfig.build.json",
    "start": "nodemon --config nodemon.json",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage false --verbose false --config jest.json",
    "test:watch": "jest --watchAll --coverage false --verbose false --config jest.json",
    "test:coverage": "jest --config jest.json",
    "test:e2e": "jest --config jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/mongoose": "^5.2.2",
    "mongoose": "^5.4.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  }
}
